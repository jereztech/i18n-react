{
    "name": "@jereztech/i18n-react",
    "version": "1.0.0",
    "description": "TypeScript-based i18n package for React ecosystem.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.esm.js",
    "files": [
        "dist"
    ],
    "directories": {
        "example": "examples"
    },
    "scripts": {
        "prepare": "npm run clean && npm run build",
        "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
        "test": "jest",
        "test:react": "jest --projects=react",
        "clean": "rimraf dist",
        "reinstall": "sudo rimraf dist node_modules package-lock.json && npm install --force"
    },
    "dependencies": {
        "rxjs": "^7.8.1"
    },
    "peerDependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        },
        "react-dom": {
            "optional": true
        }
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.0.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/jest": "^28.1.8",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "cpx": "^1.5.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^28.1.3",
        "jest-environment-jsdom": "^28.1.3",
        "ts-jest": "^28.0.8",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tslib": "^2.8.1",
        "typescript": "^5.5.6"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jereztech/i18n-react.git"
    },
    "keywords": [
        "i18n",
        "internationalization",
        "localization",
        "translation",
        "language",
        "locale",
        "language switcher",
        "react",
        "next",
        "typescript",
        "react native"
    ],
    "author": "Jerez Tech (https://jereztech.com)",
    "license": "GPLv3.0",
    "bugs": {
        "url": "https://github.com/jereztech/i18n-react/issues"
    },
    "homepage": "https://github.com/jereztech/i18n-react#readme"
}